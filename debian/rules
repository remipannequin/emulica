#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

PYTHON	:= /usr/bin/python
PYVER   := $(shell $(PYTHON) -c 'import sys; print sys.version[:3]')

build: build-stamp

build-stamp:
	dh_testdir
	python setup.py build
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	rm -rf build
	-find . -name '*.py[co]' | xargs rm -f
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs
	python setup.py install \
		--no-compile \
		--install-lib usr/share/python-support/python-emulica \
		--install-data usr/share/emulica \
		--install-scripts usr/bin \
		--root=$(CURDIR)/debian/python-emulica
	python setup.py install_locales \
		-d $(CURDIR)/debian/python-emulica/usr/share/locale
		

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs -X.svn README doc/webpage/docs
	dh_installexamples doc/examples/* 
	dh_install ui/emulica-icon.svg usr/share/icons/hicolor/scalable/apps
	dh_install ui/emulica-icon.png usr/share/pixmaps
	dh_install ui/*.svg usr/share/icons/hicolor/scalable/actions
	dh_installmenu
	dh_install ui/emulica.desktop usr/share/applications
	dh_install ui/emulica-mime.xml usr/share/mime/packages
	dh_install ui/application-x-emulica.svg usr/share/icons/hicolor/scalable/mimetypes
	#dh_installman
	: # Replace all '#!' calls to python with $(PYTHON)
	: # and make them executable
	for i in `find debian -mindepth 3 -type f`; do \
	  sed '1s,#!.*python[^ ]*\(.*\),#! $(PYTHON)\1,' \
	        $$i > $$i.temp; \
	  if cmp --quiet $$i $$i.temp; then \
	    rm -f $$i.temp; \
	  else \
	    mv -f $$i.temp $$i; \
	    chmod 755 $$i; \
	    echo "fixed interpreter: $$i"; \
	  fi; \
	done
	dh_pysupport
	dh_compress -X.py
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here.
binary-arch: build install
# We have nothing to do by default.

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
